{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ],

    "paths": {
      "@core/*": [
        "./src/app/core/*"
      ],
      "@service/*": [
        "./src/app/service/*"
      ],
      "@shared/*": [
        "./src/app/shared/*"
      ],
      "@init/*": [
        "./src/app/init/*"
      ],
      "@env/*": [
        "./src/environments/*"
      ],
      "@feat/*": [
        "./src/app/feat/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "enableIvy": true,
    "allowEmptyCodegenFiles": true,
    "strictInjectionParameters": true
  }
}
